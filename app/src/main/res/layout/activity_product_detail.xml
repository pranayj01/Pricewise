<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="fitCenter"
            android:layout_marginBottom="10dp" />

        <!-- Product Name -->
        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- Product Description -->


        <!-- Price Row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="₹1399"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_mrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹9999"
                android:textColor="#888888"
                android:layout_marginStart="10dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/product_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="86% off"
                android:textColor="#00C853"
                android:textStyle="bold"
                android:layout_marginStart="10dp" />

            <TextView
                android:id="@+id/lowest_price_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lowest price"
                android:textColor="#FFFFFF"

                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textSize="12sp"
                android:layout_marginStart="10dp" />
        </LinearLayout>

        <!-- Price note -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* Price may vary based on location or shipping cost"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#444444"
            android:layout_marginTop="4dp" />

        <!-- Flipkart Button -->
        <Button
            android:id="@+id/view_on_platform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIEW ON Flipkart"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp" />

        <!-- Price History Heading -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price history"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp" />

        <!-- Placeholder for Graph/Image -->
        <ImageView
            android:id="@+id/price_graph"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="10dp" />

    </LinearLayout>
</ScrollView>
